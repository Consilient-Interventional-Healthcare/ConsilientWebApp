# Act environment file - loads secrets for local testing
# Copy this file to .env.act and fill in your actual values
# DO NOT commit .env.act to version control (it's in .gitignore)

# ARM credentials for Terraform
# Get from: az account show
ARM_CLIENT_ID=<your-client-id-here>
ARM_CLIENT_SECRET=<your-client-secret-here>
ARM_TENANT_ID=<your-tenant-id-here>
AZURE_SUBSCRIPTION_ID=<your-subscription-id-here>

# SQL Admin credentials
SQL_ADMIN_USERNAME=sqladmin
SQL_ADMIN_PASSWORD=<your-secure-password-here>

GITHUB_TOKEN=<your-github-token-here>

# ==========================================
# GITHUB VARIABLES (Non-Sensitive Config)
# ==========================================
# These values are accessible via ${{ vars.* }} in workflows
# They are also passed as secrets for backward compatibility

# Azure Container Registry URL
ACR_REGISTRY_URL=<your-acr-registry-url-here>

# Azure Infrastructure Variables
AZURE_REGION=canadacentral
AZURE_RESOURCE_GROUP_NAME=consilient-resource-group

# Container App Environment Configuration
CAE_CREATE_NEW=false
CAE_USE_SHARED=true
CAE_SHARED_NAME=consilient-env
CAE_NAME_TEMPLATE=consilient-cae-{environment}

# Container Registry (for build-runner-image.yml)
CONTAINER_REGISTRY=ghcr.io

JWT_SIGNING_SECRET=YourJWTSigningSecretKey

