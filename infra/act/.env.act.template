# Act environment file - loads secrets for local testing
# Copy this file to .env.act and fill in your actual values
# DO NOT commit .env.act to version control (it's in .gitignore)
DEFAULT_DB_SCRIPTS_PATH=src/Databases
LOG_VERBOSITY_DEFAULT=normal

# Azure Credentials for authentication
# Get the full JSON from: az account show (as service principal)
# Format: {"clientId":"...", "clientSecret":"...", ...}
AZURE_CREDENTIALS=<your-service-principal-json-here>

# ARM credentials for Terraform
# Get from: az account show
ARM_CLIENT_ID=<your-client-id-here>
ARM_CLIENT_SECRET=<your-client-secret-here>
ARM_TENANT_ID=<your-tenant-id-here>
AZURE_SUBSCRIPTION_ID=<your-subscription-id-here>

# Azure AD credentials for sqlcmd authentication
AZURE_CLIENT_ID=<your-client-id-here>
AZURE_CLIENT_SECRET=<your-client-secret-here>
AZURE_TENANT_ID=<your-tenant-id-here>

# SQL Admin credentials
SQL_ADMIN_USERNAME=sqladmin
SQL_ADMIN_PASSWORD=<your-secure-password-here>

# SQL Server FQDN (update this with your actual SQL Server name after Terraform creates it)
# Format: <project>-sqlsrv-<env>-<suffix>.database.windows.net
# You can get this from: az sql server list --resource-group consilient-resource-group --query "[].fullyQualifiedDomainName" -o tsv
AZURE_SQL_SERVER=<your-sql-server-fqdn-here>

# Azure Web App Names
# Used by the dotnet_apps.yml workflow for deployment
AZURE_API_WEBAPP_NAME=consilient-api-dev

# ACR (Azure Container Registry) Credentials
# These are automatically populated by Terraform during apply
# If running Terraform with: terraform apply -var "env_act_file_path=../github_emulator/.env.act"
# Otherwise, set these manually from the Terraform outputs:
#   - ACR_REGISTRY: terraform output acr_registry_url
#   - ACR_CICD_CLIENT_ID: cat acr_client_id.txt
#   - ACR_CICD_CLIENT_SECRET: cat acr_client_secret.txt
ACR_REGISTRY=<your-acr-registry-url-here>
ACR_CICD_CLIENT_ID=<your-acr-client-id-here>
ACR_CICD_CLIENT_SECRET=<your-acr-client-secret-here>

GITHUB_TOKEN=<your-github-token-here>

# ==========================================
# GITHUB VARIABLES (Non-Sensitive Config)
# ==========================================
# These values are accessible via ${{ vars.* }} in workflows
# They are also passed as secrets for backward compatibility

# Image Names (used by Docker workflows)
REACT_IMAGE_NAME=consilientwebapp2
API_IMAGE_NAME=consilientapi

# Azure Container Registry URL
ACR_REGISTRY_URL=<your-acr-registry-url-here>

# Azure Infrastructure Variables
AZURE_REGION=canadacentral
AZURE_RESOURCE_GROUP_NAME=consilient-resource-group

# Azure SQL Server FQDN (for database workflows)
AZURE_SQL_SERVER_FQDN=<your-sql-server-fqdn-here>

# Tool Versions
TERRAFORM_VERSION=1.6.0
SQL_SERVER_VERSION=2022-latest
SCHEMASPY_VERSION=6.2.4
JDBC_DRIVER_VERSION=12.4.2.jre11

# Container App Environment Configuration
CAE_CREATE_NEW=false
CAE_USE_SHARED=true
CAE_SHARED_NAME=consilient-env
CAE_NAME_TEMPLATE=consilient-cae-{environment}

# Container Registry (for build-runner-image.yml)
CONTAINER_REGISTRY=ghcr.io

# Actions Runner Image
ACTIONS_RUNNER_IMAGE=ghcr.io/your-github-username/consilientwebapp/actions-runner:v1.0.0
