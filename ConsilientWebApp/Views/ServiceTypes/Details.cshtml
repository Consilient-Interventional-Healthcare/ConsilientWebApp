@model ConsilientWebApp.ViewModels.ServiceTypeViewModel

@{
    ViewData["Title"] = "Service Type Details";
}

<div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
        <h1 class="text-base font-semibold text-gray-900">@ViewData["Title"]</h1>
        <p class="mt-2 text-sm text-gray-700">
            View information about this service type.
        </p>
    </div>
</div>

<div class="mt-6 border-t border-gray-100">
    <dl class="divide-y divide-gray-100">
        <!-- Description -->
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">Description</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </div>

        <!-- CPT Code -->
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">CPT Code</dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                @Html.DisplayFor(model => model.Cptcode)
            </dd>
        </div>
    </dl>
</div>

<div class="mt-6 flex items-center gap-x-4">
    <a asp-action="Edit" asp-route-id="@Model?.ServiceTypeId"
       class="inline-flex justify-center rounded-md bg-brand-blue px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-blue-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-blue">
        Edit
    </a>
    <a asp-action="Index"
       class="text-sm font-semibold leading-6 text-gray-900 hover:text-gray-700">
        Back to List
    </a>
</div>
