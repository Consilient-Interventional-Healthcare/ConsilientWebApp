@model ConsilientWebApp.ViewModels.InsuranceViewModel

@{
    ViewData["Title"] = "Delete Insurance";

    string NullDash(string? v) => string.IsNullOrWhiteSpace(v) ? "—" : v!;
}

<div class="px-4 sm:px-0">
    <h3 class="text-base leading-7 font-semibold text-gray-900">@ViewData["Title"]</h3>
    <p class="mt-1 max-w-2xl text-sm leading-6 text-gray-500">
        Are you sure you want to permanently delete this insurance record?
    </p>
</div>

<div class="mt-6 border-t border-gray-100">
    <dl class="divide-y divide-gray-100">
        <!-- Insurance Code -->
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">
                @Html.DisplayNameFor(m => m.InsuranceCode)
            </dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                @NullDash(Model?.InsuranceCode)
            </dd>
        </div>

        <!-- Insurance Description -->
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">
                @Html.DisplayNameFor(m => m.InsuranceDescription)
            </dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                @NullDash(Model?.InsuranceDescription)
            </dd>
        </div>

        <!-- Physician Included -->
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">
                @Html.DisplayNameFor(m => m.PhysicianIncluded)
            </dt>
            <dd class="mt-1 text-sm leading-6 sm:col-span-2 sm:mt-0">
                @if (Model?.PhysicianIncluded == true)
                {
                    <span class="inline-flex items-center rounded-full bg-green-50 ring-1 ring-inset ring-green-500 px-2 py-0.5 text-xs font-medium text-green-700">
                        Yes
                    </span>
                }
                else if (Model?.PhysicianIncluded == false)
                {
                    <span class="inline-flex items-center rounded-full bg-red-50 ring-1 ring-inset ring-red-500 px-2 py-0.5 text-xs font-medium text-red-700">
                        No
                    </span>
                }
                else
                {
                    <span class="inline-flex items-center rounded-full bg-gray-50 ring-1 ring-inset ring-gray-300 px-2 py-0.5 text-xs font-medium text-gray-700">
                        Unknown
                    </span>
                }
            </dd>
        </div>

        <!-- Is Contracted -->
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">
                @Html.DisplayNameFor(m => m.IsContracted)
            </dt>
            <dd class="mt-1 text-sm leading-6 sm:col-span-2 sm:mt-0">
                @if (Model?.IsContracted == true)
                {
                    <span class="inline-flex items-center rounded-full bg-green-50 ring-1 ring-inset ring-green-500 px-2 py-0.5 text-xs font-medium text-green-700">
                        Contracted
                    </span>
                }
                else if (Model?.IsContracted == false)
                {
                    <span class="inline-flex items-center rounded-full bg-red-50 ring-1 ring-inset ring-red-500 px-2 py-0.5 text-xs font-medium text-red-700">
                        Not Contracted
                    </span>
                }
                else
                {
                    <span class="inline-flex items-center rounded-full bg-gray-50 ring-1 ring-inset ring-gray-300 px-2 py-0.5 text-xs font-medium text-gray-700">
                        Unknown
                    </span>
                }
            </dd>
        </div>

        <!-- Code and Description -->
        <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
            <dt class="text-sm font-medium leading-6 text-gray-900">
                @Html.DisplayNameFor(m => m.CodeAndDescription)
            </dt>
            <dd class="mt-1 text-sm leading-6 text-gray-700 sm:col-span-2 sm:mt-0">
                @NullDash(Model?.CodeAndDescription)
            </dd>
        </div>
    </dl>
</div>

<!-- Actions -->
<div class="mt-6 flex items-center justify-end gap-x-4">
    <a asp-action="Index" class="text-sm font-semibold leading-6 text-gray-900">Cancel</a>

    <form asp-action="Delete" method="post" class="inline">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="InsuranceId" />
        <button type="submit"
                class="inline-flex justify-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-xs cursor-pointer hover:bg-red-700 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600">
            Delete
        </button>
    </form>
</div>
