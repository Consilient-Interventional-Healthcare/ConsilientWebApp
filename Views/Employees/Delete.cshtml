@model ConsilientWebApp.ViewModels.EmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.FirstName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.FirstName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.LastName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.LastName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.TitleExtension)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.TitleExtension)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.IsProvider)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.IsProvider)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Role)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Role)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.FullName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.FullName)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.IsAdministrator)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.IsAdministrator)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Email)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Email)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="EmployeeId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>
