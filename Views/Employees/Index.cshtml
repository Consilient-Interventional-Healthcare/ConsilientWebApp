@model IEnumerable<ConsilientWebApp.ViewModels.EmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
}

<div class="mx-auto max-w-screen-2xl py-8 md:py-12">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl md:text-3xl font-bold text-brand-blue">
            @ViewData["Title"]
        </h2>
        <a asp-action="Create"
           class="inline-flex items-center rounded-lg bg-brand-blue px-4 py-2 text-white text-sm font-semibold shadow-sm hover:bg-brand-blue-dark focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-blue">
            + Create New
        </a>
    </div>

    <!-- Desktop Table -->
    <div class="hidden md:block overflow-x-auto rounded-xl border border-brand-blue/20 bg-white shadow-sm">
        <table class="min-w-full text-left text-sm text-gray-700">
            <thead class="bg-brand-blue text-white">
                <tr>
                    <th class="px-4 py-3 font-medium">First Name</th>
                    <th class="px-4 py-3 font-medium">Last Name</th>
                    <th class="px-4 py-3 font-medium">Title Extension</th>
                    <th class="px-4 py-3 font-medium">Provider</th>
                    <th class="px-4 py-3 font-medium">Role</th>
                    <th class="px-4 py-3 font-medium">Full Name</th>
                    <th class="px-4 py-3 font-medium">Administrator</th>
                    <th class="px-4 py-3 font-medium">Email</th>
                    <th class="px-4 py-3 font-medium text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3">@item.FirstName</td>
                        <td class="px-4 py-3">@item.LastName</td>
                        <td class="px-4 py-3">@item.TitleExtension</td>
                        <td class="px-4 py-3">
                            @if (item.IsProvider)
                            {
                                <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">Yes</span>
                            }
                            else
                            {
                                <span class="inline-flex items-center rounded-full bg-gray-200 px-2 py-0.5 text-xs font-medium text-gray-700">No</span>
                            }
                        </td>
                        <td class="px-4 py-3">@item.Role</td>
                        <td class="px-4 py-3">@item.FullName</td>
                        <td class="px-4 py-3">
                            @(item.IsAdministrator ? "Yes" : "No")
                        </td>
                        <td class="px-4 py-3">@item.Email</td>
                        <td class="px-4 py-3 text-right space-x-2">
                            <a asp-action="Edit" asp-route-id="@item.EmployeeId"
                               class="inline-flex items-center rounded-md border border-brand-blue px-3 py-1 text-xs font-medium text-brand-blue hover:bg-brand-blue hover:text-white">
                                Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.EmployeeId"
                               class="inline-flex items-center rounded-md border border-cyan-600 px-3 py-1 text-xs font-medium text-cyan-600 hover:bg-cyan-600 hover:text-white">
                                Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.EmployeeId"
                               class="inline-flex items-center rounded-md border border-red-600 px-3 py-1 text-xs font-medium text-red-600 hover:bg-red-600 hover:text-white">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Mobile Cards -->
    <div class="space-y-4 md:hidden">
        @foreach (var item in Model)
        {
            <div class="rounded-xl border border-gray-200 bg-white shadow-sm p-4">
                <div class="flex justify-between items-start">
                    <div>
                        <h3 class="text-lg font-semibold text-brand-blue">
                            @item.FullName
                        </h3>
                        <p class="text-sm text-gray-500">@item.Role</p>
                        <p class="text-sm text-gray-500">@item.Email</p>
                    </div>
                    <div>
                        @if (item.IsProvider)
                        {
                            <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">Provider</span>
                        }
                        else
                        {
                            <span class="inline-flex items-center rounded-full bg-gray-200 px-2 py-0.5 text-xs font-medium text-gray-700">Staff</span>
                        }
                    </div>
                </div>

                <dl class="mt-3 grid grid-cols-2 gap-x-4 text-sm">
                    <div>
                        <dt class="font-medium text-gray-700">Title Ext.</dt>
                        <dd class="text-gray-600">@item.TitleExtension</dd>
                    </div>
                    <div>
                        <dt class="font-medium text-gray-700">Admin</dt>
                        <dd class="text-gray-600">@(item.IsAdministrator ? "Yes" : "No")</dd>
                    </div>
                </dl>

                <div class="mt-4 flex justify-end gap-2">
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId"
                       class="inline-flex items-center rounded-md border border-brand-blue px-3 py-1 text-xs font-medium text-brand-blue hover:bg-brand-blue hover:text-white">
                        Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.EmployeeId"
                       class="inline-flex items-center rounded-md border border-cyan-600 px-3 py-1 text-xs font-medium text-cyan-600 hover:bg-cyan-600 hover:text-white">
                        Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId"
                       class="inline-flex items-center rounded-md border border-red-600 px-3 py-1 text-xs font-medium text-red-600 hover:bg-red-600 hover:text-white">
                        Delete
                    </a>
                </div>
            </div>
        }
    </div>
</div>
