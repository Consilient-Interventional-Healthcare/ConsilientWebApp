@model IEnumerable<ConsilientWebApp.ViewModels.EmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
}

<div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
        <h1 class="text-base font-semibold text-gray-900">@ViewData["Title"]</h1>
        <p class="mt-2 text-sm text-gray-700">
            A list of all employees including their name, title, email and role.
        </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
        <a asp-action="Create"
           class="block rounded-md bg-brand-blue px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-brand-blue-dark focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-blue">
            + Add Employee
        </a>
    </div>
</div>

<div class="mt-8 flow-root">
    <!-- Desktop Table -->
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8 hidden md:block">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
            <table class="min-w-full divide-y divide-gray-300">
                <thead>
                    <tr>
                        <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">First Name</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Last Name</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Title Extension</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Provider</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Role</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Full Name</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Administrator</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Email</th>
                        <th scope="col" class="py-3.5 pr-4 pl-3 text-right text-sm font-semibold text-gray-900 sm:pr-0">
                            <span class="sr-only">Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-900 sm:pl-0">@item.FirstName</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">@item.LastName</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">@item.TitleExtension</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm">
                                @if (item.IsProvider)
                                {
                                    <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">Yes</span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-700">No</span>
                                }
                            </td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">@item.Role</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">@item.FullName</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm">
                                @if (item.IsAdministrator)
                                {
                                    <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">Yes</span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-700">No</span>
                                }
                            </td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">@item.Email</td>
                            <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0 space-x-2">
                                <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="text-blue-600 hover:text-blue-900">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.EmployeeId" class="text-cyan-600 hover:text-cyan-900">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="text-red-600 hover:text-red-900">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile Stacked Rows -->
    <div class="space-y-4 md:hidden">
        @foreach (var item in Model)
        {
            <div class="border-b border-gray-200 pb-4">
                <div class="flex justify-between items-start">
                    <div>
                        <h3 class="text-sm font-semibold text-gray-900">@item.FullName</h3>
                        <p class="text-sm text-gray-500">@item.Role</p>
                        <p class="text-sm text-gray-500">@item.Email</p>
                    </div>
                    <div>
                        @if (item.IsProvider)
                        {
                            <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">Provider</span>
                        }
                        else
                        {
                            <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-700">Staff</span>
                        }
                    </div>
                </div>

                <dl class="mt-2 grid grid-cols-2 gap-x-4 text-sm">
                    <div>
                        <dt class="font-medium text-gray-700">Title Ext.</dt>
                        <dd class="text-gray-600">@item.TitleExtension</dd>
                    </div>
                    <div>
                        <dt class="font-medium text-gray-700">Admin</dt>
                        <dd class="text-gray-600">
                            @if (item.IsAdministrator)
                            {
                                <span class="inline-flex items-center rounded-full bg-green-100 px-2 py-0.5 text-xs font-medium text-green-800">Yes</span>
                            }
                            else
                            {
                                <span class="inline-flex items-center rounded-full bg-gray-100 px-2 py-0.5 text-xs font-medium text-gray-700">No</span>
                            }
                        </dd>
                    </div>
                </dl>

                <div class="mt-3 flex justify-end gap-4 text-sm">
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId" class="text-blue-600 hover:text-blue-900">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.EmployeeId" class="text-cyan-600 hover:text-cyan-900">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId" class="text-red-600 hover:text-red-900">Delete</a>
                </div>
            </div>
        }
    </div>
</div>
