@model ConsilientWebApp.ViewModels.PatientVisitsIndexViewModel
@{
    ViewData["Title"] = "Patient Visits";
}

<div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
        <h1 class="text-base font-semibold text-gray-900">@ViewData["Title"]</h1>
        <p class="mt-2 text-sm text-gray-700">Filter by date and review visit details. Names show the assigned team for each visit.</p>
    </div>
</div>

<!-- Filter Form -->
<form asp-action="Index" method="get" class="mt-6">
    <div class="flex flex-col gap-3 sm:flex-row sm:items-end">
        <div>
            <label for="selectedDate" class="block text-sm font-medium text-gray-700">Select Date</label>
            <input type="date" id="selectedDate" name="selectedDate"
                   class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 sm:text-sm/6 focus:border-brand-blue focus:ring-brand-blue"
                   value="@(ViewBag.SelectedDate != null ? ((DateTime)ViewBag.SelectedDate).ToString("yyyy-MM-dd") : "")" />
        </div>
        <div>
            <button type="submit"
                    class="inline-flex items-center rounded-md bg-brand-blue px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-blue-dark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-blue">
                Filter
            </button>
        </div>
    </div>
</form>

<!-- Table + Mobile Cards -->
<div class="mt-8 flow-root">
    <!-- Desktop Table -->
    <div class="hidden md:block -mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
            <table class="min-w-full divide-y divide-gray-300">
                <thead>
                    <tr>
                        <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Date Serviced</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">MRN</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Patient</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Admission #</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Facility</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Service Type</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Physician</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Nurse Practitioner</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Scribe</th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Cosigning Physician</th>
                        <th scope="col" class="py-3.5 pr-4 pl-3 text-right text-sm font-semibold text-gray-900 sm:pr-0"><span class="sr-only">Actions</span></th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var item in Model.PatientVisits)
                    {
                        <tr>
                            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-900 sm:pl-0">@item.DateServiced.ToString("yyyy-MM-dd")</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">@item.Patient.PatientMrn</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">@item.Patient.PatientFullName</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">@item.AdmissionNumber</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">@item.Facility.FacilityAbbreviation</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">@item.ServiceType.CodeAndDescription</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">@item.PhysicianEmployee?.FullName</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">@item.NursePractitionerEmployee?.FullName</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">@item.ScribeEmployee?.FullName</td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-700">@item.CosigningPhysicianEmployee?.FullName</td>
                            <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
                                <a asp-action="Details" asp-route-id="@item.PatientVisitId" class="text-brand-blue hover:text-brand-blue-dark">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile Stacked Cards -->
    <div class="md:hidden space-y-4">
        @foreach (var item in Model.PatientVisits)
        {
            <div class="rounded-xl border border-gray-200 p-4 shadow-sm">
                <div class="flex items-start justify-between gap-3">
                    <div>
                        <h3 class="text-sm font-semibold text-gray-900">@item.Patient.PatientFullName</h3>
                        <p class="text-sm text-gray-600"><span class="font-medium">MRN:</span> @item.Patient.PatientMrn</p>
                    </div>
                    <div class="text-sm text-gray-700">@item.DateServiced.ToString("yyyy-MM-dd")</div>
                </div>

                <dl class="mt-3 grid grid-cols-2 gap-3 text-sm">
                    <div>
                        <dt class="font-medium text-gray-700">Admission #</dt>
                        <dd class="text-gray-700">@item.AdmissionNumber</dd>
                    </div>
                    <div>
                        <dt class="font-medium text-gray-700">Facility</dt>
                        <dd class="text-gray-700">@item.Facility.FacilityAbbreviation</dd>
                    </div>
                    <div class="col-span-2">
                        <dt class="font-medium text-gray-700">Service Type</dt>
                        <dd class="text-gray-700">@item.ServiceType.CodeAndDescription</dd>
                    </div>
                    <div class="col-span-2">
                        <dt class="font-medium text-gray-700">Team</dt>
                        <dd class="mt-1 space-y-1">
                            @if (item.PhysicianEmployee != null)
                            {
                                <div class="text-gray-800">@item.PhysicianEmployee.FullName</div>
                            }
                            @if (item.NursePractitionerEmployee != null)
                            {
                                <div class="text-gray-800">@item.NursePractitionerEmployee.FullName</div>
                            }
                            @if (item.ScribeEmployee != null)
                            {
                                <div class="text-gray-800">@item.ScribeEmployee.FullName</div>
                            }
                            @if (item.CosigningPhysicianEmployee != null)
                            {
                                <div class="text-gray-800">@item.CosigningPhysicianEmployee.FullName</div>
                            }
                        </dd>
                    </div>
                </dl>

                <div class="mt-4 flex justify-end">
                    <a asp-action="Details" asp-route-id="@item.PatientVisitId" class="text-sm font-medium text-brand-blue hover:text-brand-blue-dark">Details</a>
                </div>
            </div>
        }
    </div>
</div>
@section Summary {
    <div class="space-y-6">

        <!-- Physicians -->
        <section>
            <h2 class="text-sm font-semibold text-gray-900">Physicians</h2>
            <ul role="list" class="mt-3 divide-y divide-gray-200">
                @foreach (var physician in Model.PhysicianSummaries)
                {
                    var name = physician.Key?.Trim() ?? "";
                    var initial = string.IsNullOrEmpty(name) ? "?" : name[0].ToString().ToUpper();
                    var count = physician.Value;

                    <li class="py-4">
                        <div class="flex items-center gap-x-3">
                            <span class="size-7 flex-none rounded-full bg-brand-blue-light text-white flex items-center justify-center text-xs font-semibold">
                                @initial
                            </span>
                            <h3 class="flex-auto truncate text-sm font-semibold text-gray-900">@name</h3>
                            <span class="flex-none text-xs font-semibold text-gray-700">@count</span>
                        </div>
                        <p class="mt-2 truncate text-sm text-gray-500">
                            @count @(count == 1 ? "visit" : "visits")
                        </p>
                    </li>
                }
            </ul>
        </section>

        <!-- Nurse Practitioners -->
        <section>
            <h2 class="text-sm font-semibold text-gray-900">Nurse Practitioners</h2>
            <ul role="list" class="mt-3 divide-y divide-gray-200">
                @foreach (var np in Model.NursePractitionerSummaries)
                {
                    var name = np.Key?.Trim() ?? "";
                    var initial = string.IsNullOrEmpty(name) ? "?" : name[0].ToString().ToUpper();
                    var count = np.Value;

                    <li class="py-4">
                        <div class="flex items-center gap-x-3">
                            <span class="size-7 flex-none rounded-full bg-brand-yellow text-gray-800 flex items-center justify-center text-xs font-semibold">
                                @initial
                            </span>
                            <h3 class="flex-auto truncate text-sm font-semibold text-gray-900">@name</h3>
                            <span class="flex-none text-xs font-semibold text-gray-700">@count</span>
                        </div>
                        <p class="mt-2 truncate text-sm text-gray-500">
                            @count @(count == 1 ? "visit" : "visits")
                        </p>
                    </li>
                }
            </ul>
        </section>

        <!-- Scribes -->
        <section>
            <h2 class="text-sm font-semibold text-gray-900">Scribes</h2>
            <ul role="list" class="mt-3 divide-y divide-gray-200">
                @foreach (var s in Model.ScribeSummaries)
                {
                    var name = s.Key?.Trim() ?? "";
                    var initial = string.IsNullOrEmpty(name) ? "?" : name[0].ToString().ToUpper();
                    var count = s.Value;

                    <li class="py-4">
                        <div class="flex items-center gap-x-3">
                            <span class="size-7 flex-none rounded-full bg-brand-blue/10 text-brand-blue flex items-center justify-center text-xs font-semibold ring-1 ring-inset ring-brand-blue/30">
                                @initial
                            </span>
                            <h3 class="flex-auto truncate text-sm font-semibold text-gray-900">@name</h3>
                            <span class="flex-none text-xs font-semibold text-gray-700">@count</span>
                        </div>
                        <p class="mt-2 truncate text-sm text-gray-500">
                            @count @(count == 1 ? "visit" : "visits")
                        </p>
                    </li>
                }
            </ul>
        </section>

    </div>
}


@section Scripts {
    <script>
        // Optional: simple client-side sort by date column on header click (desc first)
        (function () {
            const table = document.querySelector('table');
            if (!table) return;
            const header = table.querySelector('thead th');
            if (!header) return;
            let desc = true;
            header.style.cursor = 'pointer';
            header.title = 'Sort by date';
            header.addEventListener('click', () => {
                const tbody = table.querySelector('tbody');
                const rows = Array.from(tbody.querySelectorAll('tr'));
                rows.sort((a, b) => {
                    const ad = a.cells[0].innerText.trim();
                    const bd = b.cells[0].innerText.trim();
                    return desc ? (bd.localeCompare(ad)) : (ad.localeCompare(bd));
                });
                rows.forEach(r => tbody.appendChild(r));
                desc = !desc;
            });
        })();
    </script>
}
