@{
    ViewData["Title"] = "Consilient Web App";
}

<!-- Page wrapper -->
<div class="mx-auto w-full max-w-screen-2xl py-8 md:py-12">
    <header class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-end sm:justify-between">
        <h2 class="text-2xl md:text-3xl font-bold text-brand-blue">
            Welcome to the Consilient Web App
        </h2>

        <!-- optional toolbar area -->
        <div class="flex gap-2">
            <!-- example: <a class="rounded-lg bg-brand-blue px-4 py-2 text-white text-sm font-semibold hover:bg-brand-blue-dark">New</a> -->
        </div>
    </header>

    <!-- Dashboard grid
         - Starts 1 col on mobile
         - 2 cols on md
         - 3 cols on lg+
         - Use col-span utilities on any card to make it wider (e.g., md:col-span-2)
    -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-fr">

        <!-- Card: Review Patient Encounters -->
        <section class="md:col-span-1 flex flex-col rounded-xl border border-brand-blue/20 bg-white shadow-sm transition h-full">
            <header class="rounded-t-xl bg-brand-blue text-white px-5 py-3">
                <h3 class="text-base md:text-lg font-semibold">Review Patient Encounters</h3>
            </header>
            <div class="px-5 py-4 flex flex-col gap-4">
                <p class="text-gray-600">
                    Review, upload, and manage patient encounters
                </p>
                <div>
                    <a asp-controller="PatientVisitsStaging"
                       asp-action="Index"
                       class="inline-flex items-center justify-center rounded-lg bg-brand-blue px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-brand-blue-dark focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-blue/50 active:bg-brand-blue-dark">
                        Patient Encounters
                    </a>
                </div>
            </div>
        </section>

        <!-- Card: Approved Patient Encounters -->
        <section class="md:col-span-1 flex flex-col rounded-xl border border-brand-blue/20 bg-white shadow-sm transition h-full">
            <header class="rounded-t-xl bg-brand-blue text-white px-5 py-3">
                <h3 class="text-base md:text-lg font-semibold">Approved Patient Encounters</h3>
            </header>
            <div class="px-5 py-4 flex flex-col gap-4">
                <p class="text-gray-600">
                    View patient encounters that have been previously approved.
                </p>
                <div>
                    <a asp-controller="PatientVisits"
                       asp-action="Index"
                       class="inline-flex items-center justify-center rounded-lg bg-brand-blue px-5 py-2.5 text-sm font-semibold text-white transition hover:bg-brand-blue-dark focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-blue/50 active:bg-brand-blue-dark">
                        Patient Encounters (Approved)
                    </a>
                </div>
            </div>
        </section>

        @if (User.IsInRole("Administrator"))
        {
            <section class="md:col-span-1 flex flex-col rounded-xl border border-gray-200 bg-white shadow-sm transition h-full">
                <header class="rounded-t-xl bg-gray-800 text-white px-5 py-3">
                    <h3 class="text-base md:text-lg font-semibold">Administration</h3>
                </header>
                <div class="px-5 py-4">
                    <p class="text-gray-600 mb-4">
                        Manage employees, services, and other settings.
                    </p>

                    <!-- List group -->
                    <ul class="divide-y divide-gray-200 rounded-lg border border-gray-200 overflow-hidden">
                        <li>
                            <a asp-controller="Employees"
                               asp-action="Index"
                               class="block px-4 py-3 text-brand-blue hover:bg-gray-50 focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-blue/40">
                                Employees
                            </a>
                        </li>
                        <li>
                            <a asp-controller="ServiceTypes"
                               asp-action="Index"
                               class="block px-4 py-3 text-brand-blue hover:bg-gray-50 focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-blue/40">
                                Service Types
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Insurances"
                               asp-action="Index"
                               class="block px-4 py-3 text-brand-blue hover:bg-gray-50 focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-blue/40">
                                Insurances
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Facilities"
                               asp-action="Index"
                               class="block px-4 py-3 text-brand-blue hover:bg-gray-50 focus:outline-none focus-visible:ring-2 focus-visible:ring-brand-blue/40">
                                Facilities
                            </a>
                        </li>
                    </ul>
                </div>
            </section>
        }

        <!-- (Example slot) Wide card for a table or chart (keep/repurpose as you add data)
             - Doesn’t change your content; just giving you a ready-made layout slot.
             - Delete if not needed yet. -->
        <section class="md:col-span-2 lg:col-span-3 flex flex-col rounded-xl border border-gray-200 bg-white shadow-sm transition h-full">
            <header class="rounded-t-xl bg-gray-50 px-5 py-3">
                <h3 class="text-base md:text-lg font-semibold text-gray-800">Dashboard Overview (placeholder)</h3>
            </header>
            <div class="px-5 py-4">
                <!-- Drop in a table or chart here. Examples:
                     Table: <div class="overflow-x-auto"><table class="w-full text-left text-sm">…</table></div>
                     Chart: <div class="relative aspect-video"><canvas id="dashboardChart"></canvas></div>
                -->
                <div class="text-sm text-gray-500">
                    Add a DataTable or Chart.js canvas here when ready.
                </div>
            </div>
        </section>

        

        <!-- (Example slot) Stat card (optional, ready for later) -->
        <section class="md:col-span-1 flex flex-col rounded-xl border border-gray-200 bg-white shadow-sm transition h-full">
            <div class="px-5 py-4">
                <div class="text-sm text-gray-500">Today</div>
                <div class="mt-1 text-3xl font-semibold text-brand-blue">—</div>
                <div class="mt-2 text-sm text-gray-500">Use for quick stats / KPIs</div>
            </div>
        </section>
        <!-- (Example slot) Stat card (optional, ready for later) -->
        <section class="md:col-span-1 flex flex-col rounded-xl border border-gray-200 bg-white shadow-sm transition h-full">
            <div class="px-5 py-4">
                <div class="text-sm text-gray-500">Today</div>
                <div class="mt-1 text-3xl font-semibold text-brand-blue">—</div>
                <div class="mt-2 text-sm text-gray-500">Use for quick stats / KPIs</div>
            </div>
        </section>
        <!-- (Example slot) Stat card (optional, ready for later) -->
        <section class="md:col-span-1 flex flex-col rounded-xl border border-gray-200 bg-white shadow-sm transition h-full">
            <div class="px-5 py-4">
                <div class="text-sm text-gray-500">Today</div>
                <div class="mt-1 text-3xl font-semibold text-brand-blue">—</div>
                <div class="mt-2 text-sm text-gray-500">Use for quick stats / KPIs</div>
            </div>
        </section>
    </div>
</div>
