@model ConsilientWebApp.ViewModels.ServiceTypeViewModel

@{
    ViewData["Title"] = "Create Service Type";
}

<h1 class="mb-4">Create Service Type</h1>

<div class="row">
    <div class="col-md-5">
        <form asp-action="Create" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cptcode" class="form-label"></label>
                <input asp-for="Cptcode" class="form-control" />
                <span asp-validation-for="Cptcode" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
