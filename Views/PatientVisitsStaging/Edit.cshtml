@model ConsilientWebApp.ViewModels.PatientVisitsStagingViewModel

@{
    ViewData["Title"] = "Edit Patient Visit";
}

<form asp-action="Edit" method="post" class="max-w-5xl">
    <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
    <input type="hidden" asp-for="PatientVisitStagingId" />

    <div class="space-y-12 sm:space-y-16">
        <!-- Section: Visit Details -->
        <section>
            <h2 class="text-base/7 font-semibold text-gray-900">Visit Details</h2>
            <p class="mt-1 max-w-2xl text-sm/6 text-gray-600">Set the basic details for this visit.</p>

            <div class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:border-t-gray-900/10 sm:pb-0">
                <!-- Visit Date -->
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    <label asp-for="DateServiced" class="block text-sm/6 font-medium text-gray-900 sm:pt-1.5">Visit Date</label>
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        <input asp-for="DateServiced" type="date"
                               class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:max-w-xs sm:text-sm/6" />
                        <span asp-validation-for="DateServiced" class="mt-1 block text-sm text-red-600"></span>
                    </div>
                </div>

                <!-- Admission Number -->
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    <label asp-for="AdmissionNumber" class="block text-sm/6 font-medium text-gray-900 sm:pt-1.5">Admission Number</label>
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        <input asp-for="AdmissionNumber"
                               class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:max-w-xs sm:text-sm/6" />
                        <span asp-validation-for="AdmissionNumber" class="mt-1 block text-sm text-red-600"></span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Section: Patient Information -->
        <section>
            <h2 class="text-base/7 font-semibold text-gray-900">Patient Information</h2>
            <p class="mt-1 max-w-2xl text-sm/6 text-gray-600">Link to an existing patient or create a new one.</p>

            <div class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:border-t-gray-900/10 sm:pb-0">
                <!-- Option: Select Existing -->
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    <span class="block text-sm/6 font-medium text-gray-900 sm:pt-1.5">Patient Source</span>
                    <div class="mt-2 sm:col-span-2 sm:mt-0 space-y-4">
                        <div class="flex items-center gap-3">
                            <input id="useExisting" name="patientOption" type="radio" value="existing" checked
                                   class="size-4 rounded-full border border-gray-300 text-brand-blue focus:ring-brand-blue" />
                            <label for="useExisting" class="text-sm text-gray-800">Select Existing Patient</label>
                        </div>

                        <div id="existingPatientSelect">
                            <select asp-for="PatientId" asp-items="Model.PatientsSelectList"
                                    class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:max-w-md sm:text-sm/6"></select>
                            <span asp-validation-for="PatientId" class="mt-1 block text-sm text-red-600"></span>
                        </div>

                        <div class="flex items-center gap-3">
                            <input id="createNew" name="patientOption" type="radio" value="new"
                                   class="size-4 rounded-full border border-gray-300 text-brand-blue focus:ring-brand-blue" />
                            <label for="createNew" class="text-sm text-gray-800">Create New Patient</label>
                        </div>

                        <!-- New Patient Fields -->
                        <div id="newPatientFields" class="hidden">
                            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                                <div>
                                    <label asp-for="NewPatient.PatientMrn" class="block text-sm/6 font-medium text-gray-900"></label>
                                    <input asp-for="NewPatient.PatientMrn"
                                           class="mt-2 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:text-sm/6" />
                                    <span asp-validation-for="NewPatient.PatientMrn" class="mt-1 block text-sm text-red-600"></span>
                                </div>

                                <div>
                                    <label asp-for="NewPatient.PatientFirstName" class="block text-sm/6 font-medium text-gray-900"></label>
                                    <input asp-for="NewPatient.PatientFirstName"
                                           class="mt-2 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:text-sm/6" />
                                    <span asp-validation-for="NewPatient.PatientFirstName" class="mt-1 block text-sm text-red-600"></span>
                                </div>

                                <div>
                                    <label asp-for="NewPatient.PatientLastName" class="block text-sm/6 font-medium text-gray-900"></label>
                                    <input asp-for="NewPatient.PatientLastName"
                                           class="mt-2 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:text-sm/6" />
                                    <span asp-validation-for="NewPatient.PatientLastName" class="mt-1 block text-sm text-red-600"></span>
                                </div>

                                <div>
                                    <label asp-for="NewPatient.PatientBirthDate" class="block text-sm/6 font-medium text-gray-900"></label>
                                    <input asp-for="NewPatient.PatientBirthDate" type="date"
                                           class="mt-2 block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:text-sm/6" />
                                    <span asp-validation-for="NewPatient.PatientBirthDate" class="mt-1 block text-sm text-red-600"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Section: Service & Employees -->
        <section>
            <h2 class="text-base/7 font-semibold text-gray-900">Service &amp; Employees</h2>
            <p class="mt-1 max-w-2xl text-sm/6 text-gray-600">Assign the facility, service type, and team members.</p>

            <div class="mt-10 space-y-8 border-b border-gray-900/10 pb-12 sm:space-y-0 sm:divide-y sm:divide-gray-900/10 sm:border-t sm:border-t-gray-900/10 sm:pb-0">
                <!-- Facility -->
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    <label asp-for="Facility" class="block text-sm/6 font-medium text-gray-900 sm:pt-1.5"></label>
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        <select asp-for="FacilityId" asp-items="Model.FacilitiesSelectList"
                                class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:max-w-md sm:text-sm/6"></select>
                        <span asp-validation-for="FacilityId" class="mt-1 block text-sm text-red-600"></span>
                    </div>
                </div>

                <!-- Service Type -->
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    <label asp-for="ServiceType" class="block text-sm/6 font-medium text-gray-900 sm:pt-1.5"></label>
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        <select asp-for="ServiceTypeId" asp-items="Model.ServiceTypesSelectList"
                                class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:max-w-md sm:text-sm/6"></select>
                        <span asp-validation-for="ServiceTypeId" class="mt-1 block text-sm text-red-600"></span>
                    </div>
                </div>

                <!-- Physician -->
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    <label asp-for="PhysicianEmployee" class="block text-sm/6 font-medium text-gray-900 sm:pt-1.5"></label>
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        <select asp-for="PhysicianEmployeeId" asp-items="Model.PhysiciansSelectList"
                                class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:max-w-md sm:text-sm/6"></select>
                        <span asp-validation-for="PhysicianEmployeeId" class="mt-1 block text-sm text-red-600"></span>
                    </div>
                </div>

                <!-- Nurse Practitioner -->
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    <label asp-for="NursePractitionerEmployee" class="block text-sm/6 font-medium text-gray-900 sm:pt-1.5"></label>
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        <select asp-for="NursePractitionerEmployeeId" asp-items="Model.NursePractitionersSelectList"
                                class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:max-w-md sm:text-sm/6"></select>
                        <span asp-validation-for="NursePractitionerEmployeeId" class="mt-1 block text-sm text-red-600"></span>
                    </div>
                </div>

                <!-- Cosigning Physician -->
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    <label asp-for="CosigningPhysicianEmployee" class="block text-sm/6 font-medium text-gray-900 sm:pt-1.5"></label>
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        <select asp-for="CosigningPhysicianEmployeeId" asp-items="Model.CosigningPhysiciansSelectList"
                                class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:max-w-md sm:text-sm/6"></select>
                        <span asp-validation-for="CosigningPhysicianEmployeeId" class="mt-1 block text-sm text-red-600"></span>
                    </div>
                </div>

                <!-- Scribe -->
                <div class="sm:grid sm:grid-cols-3 sm:items-start sm:gap-4 sm:py-6">
                    <label asp-for="ScribeEmployee" class="block text-sm/6 font-medium text-gray-900 sm:pt-1.5"></label>
                    <div class="mt-2 sm:col-span-2 sm:mt-0">
                        <select asp-for="ScribeEmployeeId" asp-items="Model.ScribesSelectList"
                                class="block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 focus:outline-2 focus:-outline-offset-2 focus:outline-brand-blue sm:max-w-md sm:text-sm/6"></select>
                        <span asp-validation-for="ScribeEmployeeId" class="mt-1 block text-sm text-red-600"></span>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- Actions -->
    <div class="mt-6 flex items-center justify-end gap-x-6">
        <a asp-action="Index" class="text-sm/6 font-semibold text-gray-900 cursor-pointer">Cancel</a>
        <button type="submit"
                class="inline-flex justify-center rounded-md bg-brand-blue px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-blue-dark focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-blue">
            Save
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            const existingRadio = document.getElementById('useExisting');
            const newRadio = document.getElementById('createNew');
            const existingBlock = document.getElementById('existingPatientSelect');
            const newBlock = document.getElementById('newPatientFields');
            const existingSelect = document.querySelector('[name="PatientId"]');
            const newInputs = newBlock ? newBlock.querySelectorAll('input') : [];

            function setMode(mode) {
                const isExisting = mode === 'existing';
                if (existingBlock) existingBlock.classList.toggle('hidden', !isExisting);
                if (newBlock) newBlock.classList.toggle('hidden', isExisting);

                if (existingSelect) {
                    existingSelect.disabled = !isExisting;
                }
                newInputs.forEach(i => i.disabled = isExisting);
            }

            existingRadio?.addEventListener('change', () => setMode('existing'));
            newRadio?.addEventListener('change', () => setMode('new'));

            // init state
            setMode(existingRadio?.checked ? 'existing' : 'new');
        })();
    </script>
}
