@model ConsilientWebApp.ViewModels.FacilityViewModel

@{
    ViewData["Title"] = "Edit Facility";
}

<h1>@ViewData["Title"]</h1>

<h4>Facility</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="FacilityId" />
            <div class="mb-3">
                <label asp-for="FacilityName" class="form-label"></label>
                <input asp-for="FacilityName" class="form-control" />
                <span asp-validation-for="FacilityName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="FacilityAbbreviation" class="form-label"></label>
                <input asp-for="FacilityAbbreviation" class="form-control" />
                <span asp-validation-for="FacilityAbbreviation" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
