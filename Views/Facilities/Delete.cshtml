@model ConsilientWebApp.ViewModels.FacilityViewModel

@{
    ViewData["Title"] = "Delete Facility";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Facility</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacilityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacilityName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacilityAbbreviation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacilityAbbreviation)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FacilityId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>
