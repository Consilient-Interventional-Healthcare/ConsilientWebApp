@model ConsilientWebApp.ViewModels.FacilityViewModel

@{
    ViewData["Title"] = "Facility Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Facility</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacilityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacilityName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FacilityAbbreviation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FacilityAbbreviation)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.FacilityId" class="btn btn-primary btn-sm">Edit</a>
    <a asp-action="Index" class="btn btn-secondary btn-sm ms-2">Back to List</a>
</div>
