@model IEnumerable<ConsilientWebApp.ViewModels.FacilityViewModel>

@{
    ViewData["Title"] = "Facilities";
}

<div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
        <h1 class="text-base font-semibold text-gray-900">@ViewData["Title"]</h1>
        <p class="mt-2 text-sm text-gray-700">
            A list of all facilities including their name and abbreviation.
        </p>
    </div>
    <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
        <a asp-action="Create"
           class="block rounded-md bg-brand-blue px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-brand-blue-dark focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-blue">
            + Add Facility
        </a>
    </div>
</div>

<div class="mt-8 flow-root">
    <!-- Desktop Table -->
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8 hidden md:block">
        <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
            <table class="min-w-full divide-y divide-gray-300">
                <thead>
                    <tr>
                        <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">
                            @Html.DisplayNameFor(m => m.First().FacilityName)
                        </th>
                        <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                            @Html.DisplayNameFor(m => m.First().FacilityAbbreviation)
                        </th>
                        <th scope="col" class="py-3.5 pr-4 pl-3 text-right text-sm font-semibold text-gray-900 sm:pr-0">
                            <span class="sr-only">Actions</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm text-gray-900 sm:pl-0">
                                @item.FacilityName
                            </td>
                            <td class="whitespace-nowrap px-3 py-4 text-sm">
                                <span class="inline-flex items-center rounded-full bg-gray-100 ring-1 ring-inset ring-gray-500 px-2 py-0.5 text-xs font-medium text-gray-700">
                                    @item.FacilityAbbreviation
                                </span>
                            </td>
                            <td class="whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-0 space-x-2">
                                <a asp-action="Edit" asp-route-id="@item.FacilityId" class="text-blue-600 hover:text-blue-900">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.FacilityId" class="text-cyan-600 hover:text-cyan-900">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.FacilityId" class="text-red-600 hover:text-red-900">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Mobile Stacked Rows -->
    <div class="space-y-4 md:hidden">
        @foreach (var item in Model)
        {
            <div class="border-b border-gray-200 pb-4">
                <div class="flex justify-between items-start">
                    <div>
                        <h3 class="text-sm font-semibold text-gray-900">@item.FacilityName</h3>
                        <p class="mt-1 text-sm text-gray-500">
                            <span class="inline-flex items-center rounded-full bg-gray-100 ring-1 ring-inset ring-gray-500 px-2 py-0.5 text-xs font-medium text-gray-700">
                                @item.FacilityAbbreviation
                            </span>
                        </p>
                    </div>
                </div>

                <div class="mt-3 flex justify-end gap-4 text-sm">
                    <a asp-action="Edit" asp-route-id="@item.FacilityId" class="text-blue-600 hover:text-blue-900">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.FacilityId" class="text-cyan-600 hover:text-cyan-900">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.FacilityId" class="text-red-600 hover:text-red-900">Delete</a>
                </div>
            </div>
        }
    </div>
</div>
