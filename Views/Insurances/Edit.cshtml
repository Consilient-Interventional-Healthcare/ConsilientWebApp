@model ConsilientWebApp.ViewModels.InsuranceViewModel

@{
    ViewData["Title"] = "Edit Insurance";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="InsuranceId" />

            <div class="mb-3">
                <label asp-for="InsuranceCode" class="form-label"></label>
                <input asp-for="InsuranceCode" class="form-control" />
                <span asp-validation-for="InsuranceCode" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="InsuranceDescription" class="form-label"></label>
                <input asp-for="InsuranceDescription" class="form-control" />
                <span asp-validation-for="InsuranceDescription" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="PhysicianIncluded" class="form-check-input" />
                <label asp-for="PhysicianIncluded" class="form-check-label"></label>
                <span asp-validation-for="PhysicianIncluded" class="text-danger d-block"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsContracted" class="form-check-input" />
                <label asp-for="IsContracted" class="form-check-label"></label>
                <span asp-validation-for="IsContracted" class="text-danger d-block"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CodeAndDescription" class="form-label"></label>
                <input asp-for="CodeAndDescription" class="form-control" />
                <span asp-validation-for="CodeAndDescription" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
