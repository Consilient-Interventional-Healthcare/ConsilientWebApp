@model ConsilientWebApp.ViewModels.InsuranceViewModel

@{
    ViewData["Title"] = "Create Insurance";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4 class="card-title mb-4">New Insurance Entry</h4>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="InsuranceCode" class="form-label"></label>
                <input asp-for="InsuranceCode" class="form-control" />
                <span asp-validation-for="InsuranceCode" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="InsuranceDescription" class="form-label"></label>
                <input asp-for="InsuranceDescription" class="form-control" />
                <span asp-validation-for="InsuranceDescription" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhysicianIncluded" class="form-label"></label>
                <input asp-for="PhysicianIncluded" class="form-control" />
                <span asp-validation-for="PhysicianIncluded" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IsContracted" class="form-label"></label>
                <input asp-for="IsContracted" class="form-control" />
                <span asp-validation-for="IsContracted" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CodeAndDescription" class="form-label"></label>
                <input asp-for="CodeAndDescription" class="form-control" />
                <span asp-validation-for="CodeAndDescription" class="text-danger"></span>
            </div>

            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
