@model IEnumerable<ConsilientWebApp.ViewModels.InsuranceViewModel>

@{
    ViewData["Title"] = "Insurance List";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Add New Insurance</a>
</div>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().InsuranceCode)</th>
            <th>@Html.DisplayNameFor(model => model.First().InsuranceDescription)</th>
            <th>@Html.DisplayNameFor(model => model.First().PhysicianIncluded)</th>
            <th>@Html.DisplayNameFor(model => model.First().IsContracted)</th>
            <th>@Html.DisplayNameFor(model => model.First().CodeAndDescription)</th>
            <th style="width: 160px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.InsuranceCode)</td>
                <td>@Html.DisplayFor(modelItem => item.InsuranceDescription)</td>
                <td>@(item.PhysicianIncluded == null ? "No" : (item.PhysicianIncluded.Value ? "Yes" : "No"))</td>
                <td>@(item.IsContracted == null ? "No" : (item.IsContracted.Value ? "Yes" : "No"))</td>
                <td>@Html.DisplayFor(modelItem => item.CodeAndDescription)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.InsuranceId" class="btn btn-sm btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.InsuranceId" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.InsuranceId" class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
